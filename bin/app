#!/usr/bin/env ruby

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'console'
require 'validator'
require 'ui'

require 'turn'
require 'board'
require 'game'

include Marks

ui    = UI.new(Console.new($stdin, $stdout), Validator.new)
board = Board.new([[E, E, E], [E, E, E], [E, E, E]])
turn  = Turn.new(ui)
game  = Game.new(ui, board, turn)

game.play
