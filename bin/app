#!/usr/bin/env ruby

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'console'
require 'ui'

require 'turn'
require 'board'
require 'game'

require 'ttt'

include Marks

ui    = UI.new(Console.new($stdin, $stdout))
board = Board.new([[E, E, E], [E, E, E], [E, E, E]])
turn  = Turn.new(ui)
game  = Game.new(ui, board, turn)
ttt   = TTT.new(ui, game)

ttt.run
